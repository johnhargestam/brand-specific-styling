{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "plugin:json/recommended",
    "plugin:vue/essential"
  ],
  "rules": {
    "indent": ["error", 2],
    "max-len": "off"
  },
  "overrides": [
    {
      "files": "server/main.js",
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "plugins": ["json", "es"]
}